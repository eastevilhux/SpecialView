<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <cn.shequren.banner_library.Ui.FlexibleBanner
        android:id="@+id/fl_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:aspect_ratio="0.4"
        tools:ignore="MissingConstraints" />

    <cn.shequren.banner_library.Ui.FlexibleBanner

        android:id="@+id/fl_root2"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fl_root"
        app:aspect_ratio="0.5"
        tools:ignore="MissingConstraints" />

    <cn.shequren.banner_library.Ui.FlexibleBanner
        app:layout_constraintTop_toBottomOf="@id/fl_root2"
        android:id="@+id/fl_root3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:aspect_ratio="0.4"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>
